<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="text-center">
      <div id="intro" class="text-center">

        <% if user_signed_in? %>
          <%= form_for(@community, url: communities_path, html: { multipart: true }, remote: true) do |f| %>
            <div class="form-group">
              <%= f.text_field :name, class: "form-control set-phrase", placeholder: "Set Phrase", autofocus: true %>
            </div>
            <!-- <div class="form-group"> -->
              <%#= f.label :upload_image_for_phrase %>
              <%#= f.file_field :image, class: "form-control" %>
            <!-- </div> -->
            <div class="actions">
              <%= f.submit "Create", class: "btn btn-lg btn-default" %>
            </div>
          <% end %>
        <% else %>
          <h2>Do you have a brilliant phrase?</h2>
          <button type="button" class="btn btn-lg btn-default" id="create-subscription">Create</button>
          </br></br>
          <p>Just for $2 for year</p>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, html: { multipart: true }) do |f| %>

          <div id="subscription-form" style="display:none">
            <div class="form-group">
              <%= text_field_tag :set_phrase, nil, class: "form-control set-phrase", placeholder: "Set Phrase", autofocus: true %>
            </div>
            <p>Create your own phrase and create a community around it</p>

            <%= render 'partials/card_form'  %>

            <div id="user-input" style="display:none;">
              <!-- <div class="form-group"> -->
                <%#= f.label :upload_image_for_phrase %>
                <%#= file_field_tag :image, class: "form-control" %>
              <!-- </div> -->

              <div class="form-group">
                <!-- <%#= f.label :email %><br /> -->
                <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
              </div>

              <div class="form-group">
                <!-- <%#= f.label :username %><br /> -->
                <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
              </div>

              <div class="form-group">
                <%#= f.label :password %>
                <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><!-- <br /> -->
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
              </div>

              <div class="form-group">
                <!-- <%#= f.label :password_confirmation %><br /> -->
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" %>
              </div>

              <div class="actions">
                <%= f.submit "Create", class: "btn btn-lg btn-default" %>
              </div>

            </div>
          </div>

<!--             <div id="create-user" class="actions">
              <input class="btn btn-lg btn-default" type="button" value="Create">
            </div> -->

          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>

<%= render "partials/recent_phrases" %>
<%#= render "partials/popular_phrases" %>
