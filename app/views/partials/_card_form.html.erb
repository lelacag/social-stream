<%= form_for user_registration_path, method: "post", class: "grid card-form" do |f| %>
  <div class="form-group">
    <%= f.email_field :email, class: 'card-field', placeholder: 'Email' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'card-field', placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'card-field', placeholder: 'Password confirmation' %>
  </div>
  <div id="dropin"></div>
  <input type="submit" value="Pay $2" class="btn btn-info">
<% end %>
<!-- </form> -->
<!-- </div> -->

<script type="text/javascript">
  function setupBT() {
    braintree.setup("<%= @client_token %>", 'dropin', {
      container: 'dropin'
    });
  }
  if (window.addEventListener)
    window.addEventListener("load", setupBT, false);
  else if (window.attachEvent)
    window.attachEvent("onload", setupBT);
  else window.onload = setupBT;
  </script>
</script>
